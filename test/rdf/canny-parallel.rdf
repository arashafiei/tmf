rdf canny-parallel {
    topology {
        nodes = A,B,C,D,E,F;
	edges = e1(A,B), e2(B,C), e3(C,D), e4(D,E), e5(E,F);
    }
    actor A {
    	computation = VideoCapture;
	file_name = pedestrian.mp4;
    }
    actor B {
    	computation = MatSplit;
	level = 1;
    }
    actor C {
    	computation = CvtColor;
    }
    actor D {
    	computation = Canny;
    }
    actor E {
    	computation = MatMerge;
	level = 1;
    }
    actor F {
    	computation = ImageWrite;
    }
}
rule r1 {
left {
    topology {
        nodes = B,x1,y1,z;
	edges = e2(B,x1), e3(x1,y1), e4(y1,z);
    }
    actor B {
    	computation = MatSplit;
	level = 1;
    }
    actor x1 {
    	computation = CvtColor;
    }
    actor y1 {
    	computation = Canny;
    }
    actor z {
    	computation = MatMerge;
	level = 1;
    }
}
right {
    topology {
        nodes = B,x1,y1,x2,y2,x3,y3,x4,y4,z;
	edges = e2(B,x1), e3(x1,y1), e4(y1,z), e6(B,x2), e7(x2,y2), e8(y2,z), e9(B,x3), e10(x3,y3), e11(y3,z), e12(B,x4), e13(x4,y4), e14(y4,z) ;
    }
    actor B {
    	computation = MatSplit;
	level = 2;
    }
    actor x1 {
    	computation = CvtColor;
    }
    actor y1 {
    	computation = Canny;
    }
    actor x2 {
    	computation = CvtColor;
    }
    actor y2 {
    	computation = Canny;
    }
    actor x3 {
    	computation = CvtColor;
    }
    actor y3 {
    	computation = Canny;
    }
    actor x4 {
    	computation = CvtColor;
    }
    actor y4 {
    	computation = Canny;
    }
    actor z {
    	computation = MatMerge;
	level = 2;
    }
}
}
main {
	load=3 : r1;
}
